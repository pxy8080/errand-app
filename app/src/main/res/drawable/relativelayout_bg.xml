<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="1dp" />
            <gradient
                android:angle="0"
                android:endColor="#ff0006"
                android:startColor="#ff28efa2"
                android:type="linear" />

        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/navigat_background" />
            <padding
                android:bottom="12dp"
                android:top="12dp" />
        </shape>
    </item>
</layer-list>